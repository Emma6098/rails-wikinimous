<nav class="navbar navbar-light bg-light">
  <h1 class="navbar-brand"><%=link_to "Wikinimous", articles_path(@article)%></h1>
  <h6><%=link_to "New article", new_article_path%></h6>
</nav>

<div class="container">
<h2 class="col-sm-8 col-sm-offset-2 mx-auto border-bottom pb-3 pt-4"><%= @article.title%>
<small>
  <%=link_to edit_article_path(@article.id) do%>
    <i class="fa fa-pencil"></i>
  <%end%>
  <%=link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
    <i class="fa-solid fa-trash"></i>
  <%end%>
</small>
</h2>
<p class="row col-sm-8 col-sm-offset-2 mx-auto pt-3"><%= @article.content%></p>
</div>
